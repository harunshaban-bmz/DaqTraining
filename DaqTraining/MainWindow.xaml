<Window x:Class="DaqTraining.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DaqTraining"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
            Text="Test System" 
            FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Set Voltage:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="VoltageTextBox" Margin="0,5" Padding="5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Set Current:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="CurrentTextBox" Margin="0,5" Padding="5"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Daq Reading:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="3" Grid.Column="1" Name="DaqReadingTextBox" Margin="0,5" Padding="5" IsEnabled="False"/>

        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
             Content="Charge" Name="SetButton" Width="150"
             Click="SetButton_Click" Margin="0,15" Padding="10,5"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Status:" VerticalAlignment="Center" Margin="0,10,10,0"/>
        <TextBlock Grid.Row="5" Grid.Column="1" Name="StatusTextBlock" 
                Text="Ready" VerticalAlignment="Center" Margin="0,10,0,0"/>
    </Grid>
</Window>
